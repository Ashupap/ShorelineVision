# Alashore Marine Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/alashore_marine
PGHOST=localhost
PGPORT=5432
PGUSER=alashore_user
PGPASSWORD=your_secure_database_password
PGDATABASE=alashore_marine

# Session Secret (REQUIRED - generate a secure random string at least 32 characters)
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long_random_string

# Application Configuration
NODE_ENV=production
PORT=5000

# Optional: Email configuration for contact forms
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Analytics and monitoring
# GA_TRACKING_ID=UA-XXXXXXXXX-X
# SENTRY_DSN=https://your-sentry-dsn

# Security Headers (optional overrides)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com